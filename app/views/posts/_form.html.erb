<%= form_with(model: post, local: true) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true %>

    <%= f.label :content %>
    <%= f.text_area :content, rows: 5 %>

    <%= f.label :user_handle %>
    <%= f.text_field :user_handle, autofocus: true %>

    <%= f.submit %>

<% end %>
