<%= form_with(model: post, local: true) do |f| %>
    <%= render "errors", post: @post %>
    <div>
    <%= f.label :title %>
    </div>
    <div>
    <%= f.text_field :title, autofocus: true %>
    </div>

    <div>
    <%= f.label :content %>
    </div>
    <div>
    <%= f.text_area :content, rows: 5 %>
    </div>

    <div>
    <%= f.label :user_handle %>
    </div>
    <div>
    <%= f.text_field :user_handle, autofocus: true %>
    </div>

    <%= f.submit %>

<% end %>
